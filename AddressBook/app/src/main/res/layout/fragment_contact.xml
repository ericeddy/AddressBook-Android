<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="@color/greyed_out"
    android:paddingLeft="@dimen/contactfrag_padding_w"
    android:paddingRight="@dimen/contactfrag_padding_w"
    android:paddingTop="@dimen/contactfrag_padding_h"
    android:paddingBottom="@dimen/contactfrag_padding_h">

    <LinearLayout
        android:id="@+id/frag_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_contact_fragment"
        android:orientation="vertical"
        android:padding="@dimen/general_8">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_24"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/general_8"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_1"
            android:background="@color/lineitem_break"/>
        <View
            android:layout_marginTop="@dimen/general_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_1"
            android:background="@color/lineitem_break"/>

        <RelativeLayout

            android:paddingTop="@dimen/general_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/label_phone"
                android:text="@string/label_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/general_4"
                android:textSize="@dimen/font_16"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/general_8"
                android:paddingRight="@dimen/general_4"/>
            <TextView
                android:id="@+id/phone"
                android:layout_alignBottom="@+id/label_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/retInfo_left"
                android:textSize="@dimen/font_14"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/general_8"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/label_email"
                android:text="@string/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/general_4"
                android:textSize="@dimen/font_16"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/general_8"
                android:paddingRight="@dimen/general_4"/>
            <TextView
                android:id="@+id/email"
                android:layout_alignBottom="@+id/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/retInfo_left"
                android:textSize="@dimen/font_14"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/general_8"
                android:lines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_goto_contacts"
            android:layout_marginTop="@dimen/general_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/goto_btn_height"
            android:background="@drawable/background_btn_goto_contact"
            android:textSize="@dimen/font_16"
            android:textColor="@color/white"
            android:text="@string/goto_contact_btn"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/contactfrag_padding_w"
            android:layout_marginRight="@dimen/contactfrag_padding_w"
            android:padding="@dimen/general_2"/>

    </LinearLayout>

</LinearLayout>